{{#get "pages" filter="tag:hash-clients" limit="1" include="tags"  as |post|}}
    {{#if post}}
        {{#post}}
            <section>
                <div class="container pt-8 pb-16">
                    <h2 class="space-bold text-xl text-center second-color">
                        {{title}}
                    </h2>
                    <div class="flex justify-center items-center flex-wrap mt-6">
                        {{#foreach tags}}
                            <div class="mt-10 w-[210px] flex space-x-3 justify-center items-center">
                                {{#if feature_image}}
                                    <img src="{{img_url feature_image size="xxs"}}" data-src="{{img_url feature_image size="xs"}}" alt="{{name}}" class="lazyload max-w-[130px]">
                                {{else}}
                                    <span class="text-xl space-bold uppercase">{{name}}</span>
                                {{/if}}
                            </div>
                        {{/foreach}}
                    </div>
                </div>
            </section>
        {{/post}}
    {{/if}}
{{/get}}