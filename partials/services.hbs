{{#get "pages" filter="tag:hash-services" limit="1" include="tags"  as |post|}}
    {{#if post}}
        {{#post}}
            <section class="py-16">
                <div class="container">
                    <!-- Title -->
                    <div class="flex flex-col space-y-4 lg:space-y-0 lg:flex-row justify-between items-start mb-12">
                        <div class="basis-2/4">
                            {{#if excerpt}}
                                <span class="text-xs uppercase text-grey font-semibold mb-2 block">
                                    {{excerpt}}
                                </span>
                            {{/if}}
                            <h2 class="space-bold text-4xl second-color">
                                {{title}}
                            </h2>
                        </div>
                    </div>
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-10">
                        {{#foreach tags}}
                            <div class="bg-[#f6f7f8] rounded-2xl h-auto p-8 flex flex-col items-center justify-center">
                                <div class="mb-3 w-[80px] h-[80px] relative {{#unless feature_image}} second-bg {{/unless}} rounded-full overflow-hidden">
                                    {{#if feature_image}}
                                        <img src="{{img_url feature_image size="xxs"}}" data-src="{{img_url feature_image size="xs"}}" alt="{{name}}" class="lazyload object-cover absolute w-full h-full">
                                    {{else}}
                                        <span class="trex_has_text text-3xl text-white space-bold uppercase flex items-center justify-center h-full">{{name}}</span>
                                    {{/if}}
                                </div>
                                <div class="space-bold text-xl mb-2">
                                    {{name}}
                                </div>
                                <div class="text-grey text-sm text-center">
                                    {{description}}
                                </div>
                            </div>
                        {{/foreach}}
                    </div>
                </div>
            </section>
        {{/post}}
    {{/if}}
{{/get}}